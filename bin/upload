set \
  -o nounset \
  -o pipefail \
  -o errexit

version=v0.0.2
asset=asdf-bootstrap.tgz

url="https://api.github.com/repos/nwillc/asdf-bootstrap/releases/${version}/assets?name=${asset}"

cmd="curl --data-binary @$asset"
if [ -n "${GITHUB_API_TOKEN:-}" ]; then
  cmd="$cmd -H 'Authorization: token $GITHUB_API_TOKEN'"
fi
cmd="${cmd} -H 'Content-Type: application/octet-stream'"
cmd="$cmd $url"
echo $cmd

# https://uploads.github.com/repos/nwillc/asdf-bootstrap/releases/33978821/assets
